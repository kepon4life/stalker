<%= form_for(@dream,:html => { :class => "form-horizontal" }) do |f| %>

<% if @dream.errors.any? %>
  <% content_for :form_errors do %>
    <ul>
      <% @dream.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
<fieldset>
  <div class="control-group">
    <label class="control-label" for="dream_is_valid">Dream</label>
    <div class="controls">
      <img class="dream" class src="<%= PATH_TO_DREAMS_TREATED + @dream.file_name %>" alt="<%= @dream.file_name %>" />
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_valid, :class => "control-label" %>
    <div class="controls">
      <%= f.check_box :is_valid %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :secret_room, :class => "control-label" %>
    <div class="controls">
      <%= f.check_box :secret_room %>
    </div>
  </div>
  <div class="control-group">
     <label class="control-label">Categories</label>
     <div class="controls">
    <% Category.all.each do |category| %>
      <label>
      <%= check_box_tag "dream[category_ids][]", category.id, @dream.categories.include?(category) %> <%= category.name %>
    </label>
    <% end %>
  </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </fieldset>
<% end %>

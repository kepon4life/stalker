<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag '/bootstrap/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application' %>

  </head>
  <body>
      <% if @current_user %>
        <% if @current_user.group.id == 1 %>
          <%= render 'layouts/header_admin' %>
        <% elsif @current_user.group.id == 2 %>
          <%= render 'layouts/header_frontend' %>
        <% end %>
      <% end %>
    
    
    <div id="content" class="container"> 
      <div id="messages">
          <%= render 'layouts/messages' %> 
      </div>    
          <%= yield %>
    </div>
    <%= javascript_include_tag 'jquery-1.9.0.min.js' %>
    <script src="http://js.pusher.com/1.12/pusher.min.js"></script>
    <script>
      var PUSHER_CHANEL = '<%= PUSHER_CHANEL %>'
      var PUSHER_EVENT = '<%= PUSHER_EVENT %>'
      var PUSHER_API_KEY = '<%= PUSHER_API_KEY %>';
      var DREAM_EXTENSION = '<%= DREAM_EXTENSION %>';
    </script>
    <%= javascript_include_tag '/javascripts/stalker.js' %>
    <%= javascript_include_tag 'rails.js' %>
    <%= javascript_include_tag '/bootstrap/js/bootstrap.min.js' %>
    <%= yield :javascript_includes %>
  </body>
</html>
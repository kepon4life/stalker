<%= form_for(@category,:html => { :class => "form-horizontal" })  do |f| %>

<% if @category.errors.any? %>
  <% content_for :form_errors do %>
    <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>  
<% end %>

<fieldset>
  <div class="control-group">
    <%= f.label :name, :class => "control-label"  %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</fieldset>
<% end %>

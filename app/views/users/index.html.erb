<% @title="Users list" %>
<div class="page-header">
	<h1>Listing users</h1>
</div>

<table class="table table-bordered">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Group</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.group.name %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', :controller => "users", :action => "new" %>
